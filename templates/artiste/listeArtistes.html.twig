{% extends 'base.html.twig' %}

{% block title %}Liste des artistes{% endblock %}

{% block body %}
<h1 class="pt-2 text-center">Liste des artistes</h1>
<hr>
<div class="row pt-2">
    {% for leArtiste in lesArtistes %}
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
        <div class="card mb-3">
            <h3 class="card-header"><a href="{{path("ficheArtiste", {"id" : leArtiste.id})}}">{{leArtiste.nom}}</a></h3>
            <div class="card-body">
             <a href="" class="badge badge-success"><h5 class="card-title"> {{leArtiste.albums|length}} album </h5></a> 
            </div>
            <img class="mx-auto d-block" src="{{leArtiste.image}}" alt="">
            <div class="card-body">
              <p class="card-text">{{leArtiste.description}} </p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item badge bg-primary"> {% if leArtiste.type == 0 %} 
                Artiste solo {% else %} Groupe {% endif %} </li>
              <li class="list-group-item">{{leArtiste.site}}</li>
            </ul>
          </div>
    </div>
    {% endfor %}
   
</div>
{% endblock %}
