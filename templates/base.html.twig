<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ma musique{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        <link rel="stylesheet" href="https://bootswatch.com/5/pulse/bootstrap.min.css">
        <link rel="stylesheet" href="assets/style.css">
        <script src="https://kit.fontawesome.com/f7c161e92f.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="{{path('accueil')}}">Ma musique</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Gestion des artistes</a>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="{{path('app_artiste')}}">Liste des artistes</a>
                    </div>
                  </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Gestion des albums</a>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="{{path("albums")}}">Liste des albums</a>
                    </div>
                  </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Administration</a>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="{{path("admin_artistes")}}">Gestion des artistes</a>
                      <a class="dropdown-item" href="{{path("admin_labell")}}">Gestion des labels</a>
                            <a class="dropdown-item" href="{{path("admin_nationalites")}}">Gestion des nationalitées</a>
                    </div>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Labels</a>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{path("labell")}}">Liste des labels</a>
                      </div>
                  </li>


                   <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Nationalité</a>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{path("app_nationalite")}}">Nationalité</a>
                      </div>
                  </li>


                </ul>
                
              </div>
            </div>
          </nav>

          {# MESSAGES FLASH : --------------------------#}

          {% for label, messages in app.flashes %}
            <div class="alert alert-{{label}} mt-3">
              {% for message in messages %}
                <p> {{message}} </p>
              {% endfor %}
            </div>
          {% endfor %}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        {% block body %}
        {% endblock %}

        {% block javascripts %}
          
        {% endblock javascripts %}
    </body>
</html>
