{% extends 'base.html.twig' %}

{% block title %}Liste des Nationalités{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des Nationalités</h1>
    
    <div class="row">
        {% for nationalite in nationalites %}
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ nationalite.libelle }}</h5>
                    <p class="card-text">Nombre d'artistes: {{ artistesParNationalite[nationalite.libelle] }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
